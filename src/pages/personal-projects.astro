---
import Header from '../components/Header.astro';
import Project from '../components/Project.astro';
import Sidebar from '../components/Sidebar.astro';
const projects = [
  {
    title: "Mind Garden AI",
    desc: [
      "Built an AI web application that helped users navigate through their mental health challenges.",
      "Developed using NextJS for frontend and Flask for backend"
    ],
    tech: ["NextJS", "Flask", "Tailwind"]
  },
  {
    title: "TrendSet.tech",
    desc: [
      "Automate the process of logo generation and bio creation with AI to start marketing their products.",
      "Developed with React for frontend and Flask with MongoDB for backend."
    ],
    tech: ["React", "Flask","MongoDB"]
  }
];
---

<!DOCTYPE html>
<html
>
  <Header title="Personal Projects | Bakhtiar Reza" />
  <body>
    <div class="content">
        <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/Personal-Site" class="back-nav-button w-inline-block"
              ><img src="/Personal-Site/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Personal Projects</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        tech={project.tech}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
